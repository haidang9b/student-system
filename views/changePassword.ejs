<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-12 col-md-12 border mt-3 pt-3 rounded mx-3">
        <div class="form-group text-small">
            <small><a href="/">Quay lại</a></small>
        </div>
        <h1 class="text-success">Đổi mật khẩu</h1>
        <form  class="mt-3" method="POST" action="">
            <div class="form-group">
                <label for="oldpass">Mật khẩu cũ</label>
                <input class="form-control" type="password" placeholder="Nhập mật khẩu cũ" id="oldpass" name="oldpass">
            </div>
            <div class="form-group">
                <label for="pass">Mật khẩu mới</label>
                <input class="form-control" type="password" placeholder="Nhập mật khẩu mới" id="pass" name="pass">
            </div>
            <div class="form-group">
                <label for="pass2">Nhập lại mật khẩu mới</label>
                <input class="form-control" type="password" placeholder="Nhập lại mật khẩu mới" id="pass2" name="pass2">
            </div>
            <% if(error.length > 0){%>
            <div class="alert alert-danger">
                <%=error%>
            </div>
            <%}%>
            <% if(success.length > 0){%>
                <div class="alert alert-success">
                    <%=success%>
                </div>
            <%}%>
            <div class="form-group">
                <button class="btn btn-success mr-2" type="submit">Đổi mật khẩu</button>
            </div>
        </form>
    </div>
</div>